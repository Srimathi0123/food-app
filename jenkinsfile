

pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git 'https://github.com/Srimathi0123/food-app.git'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the website...'
                script {
                    def sitePath = 'C:\\Users\\Srimathi\\Documents\\food'
                    bat """
                    xcopy /s /y .\\* ${sitePath}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment succeeded'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}
