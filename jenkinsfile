pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourusername/your-repo.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the website...'
                
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the website...'
                script {
                    def sitePath = 'C:\\Users\\Srimathi\\Documents\\food'
                    bat """
                    xcopy /s /y .\\* ${sitePath}
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Deployment succeeded!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}
